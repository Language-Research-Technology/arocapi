// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Entity {
  id          Int     @id @default(autoincrement())
  rocrateId   String
  name        String
  description String
  conformsTo  String
  // NOTE: How should we do recordType, can we infer it from conformsTo?
  // recordType String??
  memberOf    String?
  root        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // TODO: How will we handle permissions?
}
