{
  "type": "module",
  "name": "arocapi",
  "version": "2.0.2",
  "description": "An RO-Crate API",
  "main": "dist/app.js",
  "exports": {
    ".": "./dist/app.js",
    "./express": "./dist/express.js"
  },
  "keywords": [
    "rocrate",
    "oni"
  ],
  "author": "John Ferlito <johnf@inodes.org>",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/sensible": "^6.0.4",
    "@opensearch-project/opensearch": "^3.5.1",
    "@prisma/config": "^6.19.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "^6.1.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@prisma/client": "^6.19.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/express": "^5.0.6",
    "@types/node": "^22.19.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "concurrently": "^9.2.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "fastify-tsconfig": "^3.0.0",
    "knip": "^5.71.0",
    "prisma": "^6.19.0",
    "prisma-json-types-generator": "^3.6.2",
    "semantic-release": "^25.0.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15",
    "vitest-mock-extended": "^3.1.0"
  },
  "peerDependencies": {
    "@prisma/client": ">=6"
  },
  "files": [
    "src",
    "!src/generated",
    "dist",
    "!dist/generated",
    "README.md",
    "prisma",
    "prisma.config.ts"
  ],
  "scripts": {
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "pnpm run dev:clean && pnpm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"pnpm:dev:start\" \"pnpm:watch:ts\" ",
    "dev:start": "node --watch --env-file=.env dist/index.dev.js",
    "dev:clean": "rm -rf dist",
    "dbconsole": "docker compose exec db mysql --password=password catalog",
    "load-test-data": "tsx src/scripts/loadEntities.ts",
    "lint:biome": "biome check",
    "lint:types": "tsc --noEmit",
    "lint:knip": "knip",
    "lint": "concurrently -p \"[{name}]\" -n \"biome,types,knip\" -c \"yellow.bold,cyan.bold,magenta.bold\" \"pnpm:lint:biome\" \"pnpm:lint:types\" \"pnpm:lint:knip\"",
    "test": "vitest run",
    "test:watch": "./scripts/setup-integration.sh && vitest",
    "test:ui": "./scripts/setup-integration.sh && vitest --ui",
    "test:coverage": "./scripts/setup-integration.sh && vitest run --coverage",
    "generate": "npx prisma generate",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "seed": "rm -rf dist && pnpm run build:ts && node --env-file=.env example/data/seed.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Language-Research-Technology/arocapi"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a"
}
