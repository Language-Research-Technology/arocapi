{
  "type": "module",
  "name": "arocapi",
  "version": "1.0.0",
  "description": "An RO-Crate API",
  "main": "dist/app.js",
  "exports": {
    ".": "./dist/app.js",
    "./express": "./dist/express.js"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/cors": "^11.1.0",
    "@fastify/routes": "^6.0.2",
    "@fastify/sensible": "^6.0.0",
    "@opensearch-project/opensearch": "^3.5.1",
    "@prisma/client": "^6.13.0",
    "express": "^5.1.0",
    "fastify": "^5.4.0",
    "fastify-cli": "^7.4.0",
    "fastify-plugin": "^5.0.0",
    "fastify-type-provider-zod": "^5.0.2",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/express": "^5.0.3",
    "@types/node": "^22.17.0",
    "concurrently": "^9.2.0",
    "fastify-tsconfig": "^3.0.0",
    "prisma": "^6.13.0",
    "prisma-json-types-generator": "^3.5.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "start": "npm run build:ts && fastify start -l info dist/app.js",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "npm run dev:clean && npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
    "dev:clean": "rm -rf dist",
    "dbconsole": "docker compose exec db mysql --password=password catalog",
    "load-test-data": "tsx src/scripts/loadEntities.ts",
    "lint:biome": "biome check",
    "lint:types": "tsc --noEmit"
  },
  "keywords": [],
  "author": "John Ferlito <johnf@inodes.org>",
  "license": "ISC",
  "packageManager": "pnpm@10.7.0"
}
